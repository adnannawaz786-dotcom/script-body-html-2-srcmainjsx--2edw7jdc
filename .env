# Rich Text Editor Environment Variables

# Application Configuration
VITE_APP_NAME=Rich Text Editor
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Web-based rich text editor with file upload, edit, and download capabilities

# Development Configuration
VITE_NODE_ENV=development
VITE_PORT=5173
VITE_HOST=localhost

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_SUPPORTED_FILE_TYPES=.txt,.md,.html,.rtf,.doc,.docx
VITE_UPLOAD_TIMEOUT=30000

# Editor Configuration
VITE_AUTOSAVE_ENABLED=true
VITE_AUTOSAVE_INTERVAL=30000
VITE_MAX_DOCUMENT_SIZE=5242880
VITE_ENABLE_SPELL_CHECK=true

# Local Storage Configuration
VITE_STORAGE_PREFIX=rte_
VITE_STORAGE_EXPIRY=86400000
VITE_MAX_STORAGE_ITEMS=50

# Feature Flags
VITE_ENABLE_EXPORT=true
VITE_ENABLE_TEMPLATES=true
VITE_ENABLE_THEMES=true
VITE_ENABLE_KEYBOARD_SHORTCUTS=true

# Security Configuration
VITE_ENABLE_FILE_VALIDATION=true
VITE_SANITIZE_HTML=true
VITE_MAX_UNDO_HISTORY=100

# Performance Configuration
VITE_DEBOUNCE_DELAY=300
VITE_RENDER_TIMEOUT=5000
VITE_LAZY_LOADING=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_TOOLBAR_POSITION=top
VITE_SIDEBAR_WIDTH=250

# Analytics and Logging (for future use)
VITE_ENABLE_ANALYTICS=false
VITE_LOG_LEVEL=info
VITE_ERROR_REPORTING=false